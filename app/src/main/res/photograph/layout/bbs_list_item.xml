<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/bbs_list_item_info_text"
                android:textSize="@dimen/sp_18"/>

            <TextView
                android:id="@+id/item_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:textColor="@color/bbs_item_reply"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/single_image"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignLeft="@+id/item_describe"
                android:layout_marginTop="14dp"
                android:scaleType="centerCrop"/>

            <GridView
                android:id="@+id/more_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="14dp"
                android:horizontalSpacing="2dp"
                android:listSelector="@color/translucent"
                android:verticalSpacing="2dp"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/item_lable"
                    style="@style/interaction_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bbs_list_item_lable_back"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxEms="5"
                    android:paddingBottom="4dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="4dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:text="摄影"
                    android:textColor="#5296f5"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText,RtlHardcoded,UnknownIdInLayout" />

                <TextView
                    android:id="@+id/last_time"
                    style="@style/interaction_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_lable"
                    android:layout_alignTop="@+id/item_lable"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/bbs_watch_number"
                    android:layout_toRightOf="@+id/item_lable"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#a6a6a6"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/bbs_reply_number"
                    style="@style/interaction_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_lable"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/item_lable"
                    android:drawableLeft="@drawable/bbs_reply"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:text="966"
                    android:textColor="#a6a6a6"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText,RtlHardcoded,UnknownIdInLayout" />

                <TextView
                    android:id="@+id/bbs_watch_number"
                    style="@style/interaction_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_lable"
                    android:layout_alignTop="@+id/item_lable"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_toLeftOf="@+id/bbs_reply_number"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/bbs_list_watch"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:text="588"
                    android:textColor="#a6a6a6"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText,RtlHardcoded,UnknownIdInLayout" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e9e9e9"
        android:layout_alignParentBottom="true"/>
</LinearLayout>